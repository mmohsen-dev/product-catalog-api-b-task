{
  "name": "bosta-product-catalog",
  "version": "1.0.0",
  "description": "Product catalog microservice for e-commerce platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "docker:build": "docker build -t bosta-product-catalog .",
    "docker:run": "docker run -p 3000:3000 bosta-product-catalog",
    "setup:db": "node scripts/setup-database.js",
    "setup:es": "node scripts/run-setup.js",
    "setup:all": "npm run setup:db && npm run setup:es",
    "es:reindex": "NODE_ENV=production node scripts/run-setup.js"
  },
  "keywords": ["e-commerce", "product-catalog", "microservice", "search", "nodejs"],
  "author": "Bosta Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "@elastic/elasticsearch": "^7.17.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 